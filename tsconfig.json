{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "types": ["vitest"],
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src", "tests", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
